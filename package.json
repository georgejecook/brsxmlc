{
	"name": "RCP",
	"version": "0.0.1",
	"description": "preprocessor for roku brightscript and scenegraph xml files",
	"main": "index.js",
	"directories": {
		"example": "examples",
		"test": "test"
	},
	"dependencies": {
		"babel-cli": "^6.26.0",
		"chai": "^4.1.2",
		"chai-subset": "^1.6.0",
		"commander": "latest",
		"debug": "latest",
		"dir-compare": "^1.4.0",
		"fs-extra": "^5.0.0",
		"glob": "^7.1.3",
		"lodash": "latest",
		"mocha": "^5.1.1",
		"nyc": "^13.1.0",
		"replace-ext": "^1.0.0",
		"splice-string": "^2.0.0",
		"tslint": "^5.11.0",
		"typescript": "^3.2.2"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/debug": "0.0.31",
		"@types/fs-extra": "^5.0.4",
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.119",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.12.15",
		"@types/replace-ext": "0.0.27",
		"babel-core": "^6.26.3",
		"babel-preset-env": "^1.6.1",
		"mocha": "^5.1.1"
	},
	"scripts": {
		"test": "nyc mocha src/**/*.spec.ts --full-trace --bail",
		"prepare": "npm run compile",
		"compile": "tsc -p ./src",
		"tslint": "tslint ./src/**/*.ts",
		"build-and-test": "npm run compile && npm run test",
		"coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov"
	},
	"preferGlobal": true,
	"bin": {
		"rcp": "./index.js"
	},
	"keywords": [
		"brightscript",
		"scenegraph",
		"roku",
		"preprocessor"
	],
	"author": "George Cook",
	"license": "ISC"
}
