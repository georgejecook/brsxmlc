{
	"name": "RCP",
	"version": "0.0.1",
	"description": "preprocessor for roku brightscript and scenegraph xml files",
	"main": "dist/index.js",
	"typings": "dist/index.d.ts",
	"files": [
		"dist/**/!(*.spec.*)*",
		"brsconfig.schema.json"
	],
	"dependencies": {
		"commander": "latest",
		"debug": "latest",
		"dir-compare": "^1.4.0",
		"fs-extra": "^5.0.0",
		"glob-all": "^3.1.0",
		"lodash": "latest",
		"os": "^0.1.1",
		"replace-ext": "^1.0.0",
		"splice-string": "^2.0.0"
	},
	"devDependencies": {
		"@types/chai": "^4.1.7",
		"@types/chai-subset": "^1.3.1",
		"@types/debug": "0.0.31",
		"@types/fs-extra": "^5.0.4",
		"@types/glob": "^7.1.1",
		"@types/lodash": "^4.14.119",
		"@types/mocha": "^5.2.5",
		"@types/node": "^10.12.15",
		"@types/replace-ext": "0.0.27",
		"babel-cli": "^6.26.0",
		"babel-core": "^6.26.3",
		"babel-preset-env": "^1.6.1",
		"brightscript-language": "^0.2.8",
		"chai": "^4.1.2",
		"chai-subset": "^1.6.0",
		"codecov": "^3.7.1",
		"compare-directories": "^0.1.0",
		"mocha": "^5.1.1",
		"nyc": "^13.1.0",
		"sax": "^1.2.4",
		"ts-node": "^7.0.1",
		"tslint": "^5.11.0",
		"tslint-eslint-rules": "^5.4.0",
		"tslint-origin-ordered-imports-rule": "^1.1.2",
		"typescript": "^3.2.2"
	},
	"scripts": {
		"test": "nyc mocha src/**/*.spec.ts --full-trace --bail",
		"compile": "tsc -p .",
		"prepublishOnly": "npm run compile",
		"tslint": "tslint ./src/**/*.ts",
		"build-and-test": "npm run compile && npm run test",
		"coverage": "nyc report --reporter=text-lcov > coverage.lcov && codecov",
		"publish-npm:beta": "npm publish --tag=next"
	},
	"preferGlobal": true,
	"bin": {
		"rcp": "dist/cli.js"
	},
	"keywords": [
		"brightscript",
		"scenegraph",
		"roku",
		"preprocessor"
	],
	"author": "George Cook",
	"license": "ISC",
	"watch": {
		"test": {
			"extensions": "ts",
			"patterns": [
				"src"
			]
		}
	},
	"nyc": {
		"include": [
			"src/**/!(*.spec).ts"
		],
		"extension": [
			".ts"
		],
		"require": [
			"ts-node/register",
			"source-map-support/register"
		],
		"reporter": [
			"text-summary",
			"html"
		],
		"sourceMap": true,
		"instrument": true,
		"check-coverage": true,
		"lines": 5,
		"statements": 5,
		"functions": 5,
		"branches": 5
	}
}
